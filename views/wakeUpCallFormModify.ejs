<%- include('partials/header') -%>

<main class="vertical-center">
    <div class="container">
        <h2>Modify wake up call for room <%=wakeUpCall.roomNumber%></h2>

        <form action="<%=wakeUpCall.id%>" method="post" class="p-3 border rounded bg-light">
            <input type="hidden" name="_method" value="put">
            
            
            <div class="mb-3">
                <label for="wakeUpTime" class="col-form-label">Wake up time time:</label>
                <input type="datetime-local" class="form-control" id="wakeUpTime" name="wakeUpTime" value="<%=wakeUpCall.wakeUpTime%>">
            </div>

            <div class="mb-3">
                <label for="guestName" class="col-form-label">Guest Name:</label>
                <input type="text" class="form-control" id="guestName" name="guestName" value="<%=wakeUpCall.guestName%>">
              </div>

              <div class="mb-3">
                <label for="observations" class="col-form-label">observations:</label>
                <textarea class="form-control" id="observations" name="observations"><%=wakeUpCall.observations%></textarea>
              </div>

            <div class="d-grid justify-content-md-end">
                <div>
                    <a href="/feed" class="btn btn-secondary pe-2">Close</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>

        </form>
    </div>
</main>



<%- include('partials/footer') -%>