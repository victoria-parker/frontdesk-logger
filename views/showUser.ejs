<%- include('partials/header') -%>

<main class="container mt-5">
    <div class="card mt-3">
        <div class="card-header">
            <h3>User <%=user.firstName+' '+user.lastName%></h3>
        </div>
        <div class="card-body">
            <h5 class="card-title">User email: <%=user.email%></h5>
            <p class="card-text"><%if(user.active){%>active<%}else{%>inactive<%}%></p>
        </div>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">created by <%=admin.firstName+" "+admin.lastName%></li>
                <li class="list-group-item">created on <%=moment(user.createdAt).format('MMMM Do YYYY, h:mm:ss a')%></li>
                <li class="list-group-item">is it admin? 
                    <%if(user.admin){%>
                        yes
                    <%}else{%>
                        no
                    <%}%>    
                </li>
            </ul>
    </div>
    <div class="d-grid justify-content-md-end mt-5">
        <div>
            <a href="/settings" class="btn btn-outline-secondary pe-2">back to settings</a>
            <a href="/users/modifyUser/<%=user._id%>" class="btn btn-outline-warning">modify</a>
            <a href="/users/removeUser/<%=user._id%>" class="btn btn-outline-danger pe-2">remove</a>
        </div>
    </div>
</main>
<%- include('partials/footer') -%>